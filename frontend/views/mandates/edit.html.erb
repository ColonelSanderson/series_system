<%= setup_context :object => @mandate, :title => @mandate.title %>

<%= form_for @mandate, :as => "mandate", :url => {:action => :update}, :html => {:class => 'form-horizontal aspace-record-form'}.merge(update_monitor_params(@mandate)) do |f| %>
  <%= form_context :mandate, @mandate do |form| %>
    <div class="row">
      <div class="col-md-3">
        <%= render_aspace_partial :partial => "sidebar" %>
      </div>
      <div class="col-md-9">
        <%= render_aspace_partial :partial => "toolbar" %>
        <div class="record-pane">
          <%= link_to_help :topic => "mandate" %>
          <h2><%= @mandate.title %>  <span class="label label-info"><%= I18n.t("mandate._singular") %></span></h2>
          <br/>
          <%= render_aspace_partial :partial => "mandates/form", :locals => {:form => form} %>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary"><%= I18n.t("mandate._frontend.action.save") %></button>
            <%= link_to I18n.t("actions.cancel"), :back, :class => "btn btn-cancel btn-default" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<%= javascript_include_tag("subrecord.crud") %>
<%= javascript_include_tag("form") %>
<%= javascript_include_tag("dates.crud.js") %>